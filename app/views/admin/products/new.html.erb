<h1>create product</h1>
<%= form_with(model: @product, url: admin_products_path,  data: {turbo: false}) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.select :category_id, Category.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>

    <%= f.submit "Create Product" %>
<% end %>
